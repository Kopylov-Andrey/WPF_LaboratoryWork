<Window x:Class="Laboratory_Work2._2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_Work2._2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="385">
    <Grid Margin="10,10,10,10">
        <ToolBar Header="ToolBar" VerticalAlignment="Top">
            <Slider Name="slider" VerticalAlignment="Top" Width="120" ValueChanged="Slider_ValueChanged"/>
            <ComboBox Name="CB" ItemsSource="{Binding fonts}" Width="120" SelectionChanged="ComboBox_SelectionChanged"></ComboBox>
        </ToolBar>
        <RichTextBox Name="RTB" VerticalAlignment="Bottom" Height="350" FontFamily="Arial">
            
        </RichTextBox>

    </Grid>
</Window>
