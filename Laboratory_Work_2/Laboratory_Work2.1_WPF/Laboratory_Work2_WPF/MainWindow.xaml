        <TextBox Name="secondTB" HorizontalAlignment="Left" Height="23" Margin="330,183,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" PreviewTextInput="secondTB_PreviewTextInput"/>
        <Label Content="Площадь" HorizontalAlignment="Left" Margin="526,116,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="area"  HorizontalAlignment="Left" Margin="604,116,0,0" VerticalAlignment="Top" Height="22"/>
