<Window x:Class="Laboratory_Work_3._2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_Work_3._2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="ContentPanel" Grid.Row="1">
        
        <Canvas x:Name="canvas" MouseLeftButtonDown="canvas_MouseLeftButtonDown" Grid.Column="1"  Background="Aquamarine" ></Canvas>
        <Button Content="Draw"  Width="70" Height="30" Click="Button_Click" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"></Button>
        <Polyline x:Name="polyline" Stroke="DarkGreen" StrokeThickness="3"/>

    </Grid>
</Window>
